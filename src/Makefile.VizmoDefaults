################################################################################
# PHANToM DEFINES
################################################################################
PHANTOM_LIBS :=
ifeq ($(phantom), 1)
  PHANTOM_LIBS := -lHD -lHDU -lHL -lHLU -lrt
  MP_DEF       += -DUSE_HAPTICS
  VIZMO_SRCS   += PHANToM/Manager.cpp
endif

################################################################################
# SpaceMouse DEFINES
################################################################################
SPACEMOUSE_LIBS :=
ifeq ($(spacemouse), 1)
  SPACEMOUSE_LIBS := -lspnav
  MP_DEF          += -DUSE_SPACEMOUSE
  VIZMO_SRCS      += SpaceMouse/SpaceMouseManager.cpp
endif

################################################################################
# Aggregated
################################################################################
DEFS += -DVIZMO
