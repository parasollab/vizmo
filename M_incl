#--------------------------------------------------------------------------
# collision detection
#--------------------------------------------------------------------------
 #RCD_DIR = /users/jdenny/PMPL/trunk/utils/geom/CD-libs
 RCD_DIR = /home/jdenny/PMPL/trunk/utils/geom/CD-libs

 RAPID_DIR     = ${RCD_DIR}/RAPID
