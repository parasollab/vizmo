#-----------------------------------------------------------------------------
# Choose a compiler & its options
#-----------------------------------------------------------------------------

 g++ = g++

 CXX = g++

 OPTS = -O3 -W -Wno-deprecated #-Wall
 #OPTS = -g -MMD -W
 #OPTS = -ggdb -Wall -Wno-deprecated #-DUSE_PHANTOM

RPM = 0
ifeq ($(RPM), 1)
  OPTS+=-MMD -fPIC 
endif

_64BIT = 0
ifeq ($(_64BIT), 1)
   OPTS+=-D_64_BIT
endif

#--------------------------------------------------------------------
# Xlib
